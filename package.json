{
    "name": "tdm",
    "displayName": "Todomator",
    "description": "Bore-friendly notetaking automator and parser.",
    "version": "0.0.6",
    "repository": {
        "type": "git",
        "url": "https://github.com/Atarity/Todomator.git"
    },
    "publisher": "Atarity",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:markdown",        
        "onCommand:tdm.newEntry",
        "onCommand:tdm.showStats",
        "onCommand:tdm.markAsDone",
        "onCommand:tdm.filterByTags",
        "onCommand:tdm.setup"
    ],
    "main": "./out/extension",
    "contributes": {
        "grammars": [
            {
                "path": "./syntaxes/injection.json",
                "scopeName": "open-task.injection",
                "injectTo": [
                    "text.html.markdown"
                ]
            }
        ],
        "configuration": [
            {
                "type": "object",
                "title": "Todomator configuration",
                "properties": {
                    "tdm.homeDir": {
                        "type": "array",
                        "description": "Path to the directory with Todomator's notes.",
                        "default": [],
                        "items": {
                            "hostname": {
                                "type": "string",
                                "description": "Computer name"
                            },
                            "path": {
                                "type": "string",
                                "description": "Local path to notes directory"
                            }
                        }
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "tdm.newEntry",
                "title": "New entry",
                "category": "Todomator"
            },
            {
                "command": "tdm.showStats",
                "title": "Show statistics",
                "category": "Todomator"
            },
            {
                "command": "tdm.filterByTags",
                "title": "Filter notes by tags",
                "category": "Todomator"
            },
            {
                "command": "tdm.setup",
                "title": "Run setup",
                "category": "Todomator"
            }
        ],
        "keybindings": [
            {
                "command": "tdm.newEntry",
                "key": "Ctrl+T"
            },
            {
                "command": "tdm.markAsDone",
                "key": "Ctrl+Shift+Q",
                "when": "editorTextFocus && editorLangId == markdown"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "typescript": "^2.6.1",
        "vscode": "^1.1.28"
    },
    "dependencies": {
        "gray-matter": "^4.0.2",
        "klaw": "^3.0.0"
    }
}
