{
    "name": "tdm",
    "displayName": "Todomator",
    "description": "Bore-friendly notetaking automator and parser.",
    "version": "0.0.5",
    "repository": {
        "type": "git",
        "url": "https://github.com/Atarity/Todomator.git"
    },
    "publisher": "Atarity",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:tdm.newEntry",
        "onCommand:tdm.showStats",
        "onCommand:tdm.markAsDone"
    ],
    "main": "./out/extension",
    "contributes": {
        "grammars": [
            {
                "path": "./syntaxes/injection.json",
                "scopeName": "open-task.injection",
                "injectTo": [
                    "text.html.markdown"
                ]
            }
        ],
        "configuration": [
            {
                "title": "Directory with notes",
                "properties": {
                    "tdm.homeDirMac": {
                        "type": "string",
                        "scope": "resource",
                        "default": "/Seredkin/Notes/",
                        "description": "POSIX path to the directory with Todomator's notes."
                    },
                    "tdm.homeDirWin": {
                        "type": "string",
                        "scope": "resource",
                        "default": "C:/Seredkin/Notes/",
                        "description": "POSIX path (back-slashed for Windows) to the directory with Todomator's notes."
                    },
                    "tdm.homeDirLinux": {
                        "type": "string",
                        "scope": "resource",
                        "default": "/Seredkin/Notes/",
                        "description": "POSIX path to the directory with Todomator's notes."
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "tdm.newEntry",
                "title": "New Entry",
                "category": "Todomator"
            },
            {
                "command": "tdm.showStats",
                "title": "Show statistics",
                "category": "Todomator"
            }
        ],
        "keybindings": [
            {
                "command": "tdm.newEntry",
                "key": "Ctrl+T"
            },
            {
                "command": "tdm.markAsDone",
                "key": "Ctrl+Shift+Q",
                "when": "editorTextFocus && editorLangId == markdown"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "typescript": "^2.6.1",
        "vscode": "^1.1.28"
    }
}
